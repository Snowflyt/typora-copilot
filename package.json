{
  "name": "typora-copilot",
  "version": "0.2.8",
  "private": true,
  "description": "GitHub Copilot plugin for Typora",
  "keywords": [
    "Typora",
    "Copilot",
    "GitHub Copilot",
    "AI",
    "code completion",
    "code suggestion",
    "code generation"
  ],
  "homepage": "https://github.com/Snowfly-T/typora-copilot",
  "bugs": {
    "url": "https://github.com/Snowfly-T/typora-copilot/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Snowfly-T/typora-copilot"
  },
  "license": "MIT",
  "author": "Snowflyt <gaoge011022@163.com>",
  "type": "module",
  "main": "./index.js",
  "scripts": {
    "build:dev": "npm run prebuild && rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript && cpy {package.json,README.md,README.zh-CN.md,bin,docs,language-server} dist",
    "build:release": "npm run prebuild && rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript && prettier --loglevel=silent --print-width 80 --write dist/**/* && cpy {package.json,README.md,README.zh-CN.md,bin,docs,language-server} dist",
    "build:watch": "npm run prebuild && cpy {package.json,README.md,README.zh-CN.md,bin,docs,language-server} dist && rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript --watch",
    "clean": "rimraf dist",
    "format": "prettier --write {src,test}/**/*.{json,js,jsx,ts,tsx} *.{js,cjs,mjs,ts,cts,mts,json,md} && prettier --write --parser json .hintrc",
    "lint": "eslint {src,test}/**/*.{js,jsx,ts,tsx} *.{js,cjs,mjs,ts,cts,mts} --report-unused-disable-directives-severity error --max-warnings 0 && stylelint \"src/**/*.{css,scss}\"",
    "lint:fix": "eslint --fix {src,test}/**/*.{js,jsx,ts,tsx} *.{js,cjs,mjs,ts,cts,mts} --report-unused-disable-directives-severity error --max-warnings 0 && stylelint --fix \"src/**/*.{css,scss}\"",
    "prebuild": "npm run clean",
    "prepare": "husky",
    "test": "vitest run",
    "test-types": "typroof",
    "test:cov": "vitest run --coverage",
    "test:ui": "vitest --ui --coverage.enabled=true",
    "test:watch": "vitest",
    "test:watch-cov": "vitest --coverage"
  },
  "dependencies": {
    "@preact/signals": "^1.2.2",
    "core-js": "^3.36.1",
    "lodash-es": "^4.17.21",
    "preact": "^10.19.7",
    "ts-pattern": "^5.0.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/codemirror": "^5.60.15",
    "@types/core-js": "^2.5.8",
    "@types/jquery": "^3.5.29",
    "@types/lint-staged": "^13.3.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.29",
    "@types/prettier": "2.7.3",
    "@types/rangy": "^0.0.38",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "@vitest/coverage-v8": "^1.4.0",
    "@vitest/ui": "^1.4.0",
    "cpy-cli": "^5.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.24.0",
    "eslint-plugin-sort-destructure-keys": "^1.5.0",
    "happy-dom": "^13.10.1",
    "hotscript": "^1.0.13",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.36",
    "prettier": "^2.8.8",
    "prettier-plugin-packagejson": "^2.4.12",
    "replace-in-file": "^7.1.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.13.0",
    "rollup-plugin-postcss": "^4.0.2",
    "sass": "^1.72.0",
    "stylelint": "^16.2.1",
    "stylelint-config-standard-scss": "^13.0.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2",
    "typroof": "^0.2.6",
    "vitest": "^1.4.0",
    "ws": "^8.16.0"
  }
}
